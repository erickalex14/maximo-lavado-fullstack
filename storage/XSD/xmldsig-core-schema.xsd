<?xml version="1.0" encoding="UTF-8"?>
<!-- Minimal xmldsig schema to allow validating SRI docs that import ds:Signature.
     This does not fully validate the signature content; it only declares the element. -->
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:ds="http://www.w3.org/2000/09/xmldsig#"
           targetNamespace="http://www.w3.org/2000/09/xmldsig#"
           elementFormDefault="qualified"
           attributeFormDefault="unqualified">
  <xs:complexType name="SignatureType">
    <xs:sequence>
      <!-- Allow any child content without validation to avoid blocking schema validation -->
      <xs:any minOccurs="0" maxOccurs="unbounded" processContents="skip"/>
    </xs:sequence>
    <xs:anyAttribute processContents="skip"/>
  </xs:complexType>
  <xs:element name="Signature" type="ds:SignatureType"/>
</xs:schema>
